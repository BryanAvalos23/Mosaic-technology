---
import BtnMoreServices from "./BtnMoreServices.astro";
import services from "../../public/js/services.ts";
---

<div class="flex items-center justify-center mt-12 gap-24">
  {
    services.map(({ title, description, img }) => (
      <article class="w-80 flex justify-center items-center">
        <div class="w-full h-full flex flex-col justify-center items-center gap-2">
          <img
            src={img}
            alt={`Servicio de ${img}`}
            class=" rounded-full size-52 object-cover"
          />
          <h3 class=" font-semibold text-2xl text-blue-800">{title}</h3>
          <p class="text-lg font-normal">{description}</p>
        </div>
      </article>
    ))
  }
</div>
<div class="w-full flex justify-center mt-4">
  <BtnMoreServices />
</div>
