---
import BtnMoreServices from "./BtnMoreServices.astro";
import services from "../../public/js/services.ts";
---

<div
  class="flex flex-col items-center justify-center gap-12 md:flex-row md:gap-20 lg:gap-24 mt-12"
>
  {
    services.map(({ title, description, img }) => (
      <article class="w-80 flex justify-center items-center">
        <div class="w-full h-full flex flex-col justify-center items-center gap-2">
          <img
            src={img}
            alt={`Servicio de ${img}`}
            class=" rounded-full size-52 object-cover md:size-44 lg:size-52"
          />
          <h3 class=" font-semibold text-2xl text-white md:text-xl lg:text-2xl">
            {title}
          </h3>
          <p class="text-lg font-normal text-center text-white">
            {description}
          </p>
        </div>
      </article>
    ))
  }
</div>
<div class="w-full flex justify-center mt-6 md:mt-4">
  <BtnMoreServices />
</div>
